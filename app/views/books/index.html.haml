%nav
  .nav-wrapper.white
    %a.brand-logo{:href => "#"} Logo
    %ul#nav-mobile.right.hide-on-med-and-down
      %li
        %a{:href => books_path} Buy/Borrow
      %li
        %a{:href => new_book_path} Sell/Lend
    
%h1 Listing books

%table
  %thead
    %tr
      %th Title
      %th Author
      %th Language
      %th Category
      %th Base price
      %th Rent price
      %th Desc
      %th Availability
      %th Issueable
      %th Buyable
      %th
      %th
      %th

  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.author
        %td= book.language
        %td= book.category
        %td= book.base_price
        %td= book.rent_price
        %td= book.desc
        %td= book.availability
        %td= book.issueable
        %td= book.buyable
        %td= link_to 'Show', book, {:style=>'color:#FFFFFF;font-weight:600;'}

%br
.new_books
  = link_to 'New Book', new_book_path, {:style=>'color:#FFFFFF;font-weight:700;border:1px solid #fff;border-radius:5px; padding: 10px;'}
